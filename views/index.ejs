<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <title>Kurser</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>Kurser</h1>
    <nav>
      <a href="/">Start</a>
      <a href="/add">Lägg till kurs</a>
      <a href="/about">Om sidan</a>
    </nav>
  </header>

  <div class="container">
    <h1>Alla kurser</h1>
    <ul class="course-list">
      <% if (rows.length > 0) { %>
        <% rows.forEach((row) => { %>
          <li>
            <strong><%= row.coursecode %></strong> 
            <%= row.coursename %> 
            <a href="<%= row.syllabus %>" class="syllabus" target="_blank">Kursplan</a> 
            Progression: <%= row.progression %> 
            <a href="/delete/<%= row.id %>" class="delete-btn" onclick="return confirm('Är du säker på att du vill radera denna kurs?')">Radera</a>
          </li>
        <% }); %>
      <% } else { %>
        <p>Inga kurser har lagts till än.</p>
      <% } %>
  </ul>

</body>
</html>
